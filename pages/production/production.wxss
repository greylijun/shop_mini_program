/* pages/production/production.wxss */
.weui-flex__item {
    float: left;
    width: 45%;
    height: 150px;
    margin: 10px 9px 0 9px;
}

.weui-flex__item image {
    float: left;
    width: 100%;
    height: 90%;
    border-radius: 10px;
}

.weui-flex__item text {
    float: left;
    font-size: 10px;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}